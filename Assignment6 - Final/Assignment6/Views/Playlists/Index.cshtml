@model IEnumerable<Assignment6.Controllers.PlaylistBase>

@{
    ViewBag.Title = "Index";
}

<h2>List of playlists</h2>
<p>
    @Html.ActionLink("Add New Playlist", "Create")
</p>



<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TracksCount)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
           @Html.ActionLink(@item.Name, "Details", new { id = item.PlaylistId })
        </td>
        <td>
           <span class="badge"> @Html.DisplayFor(modelItem => item.TracksCount) </span>
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.PlaylistId }) |
            @Html.ActionLink("Details", "Details", new { id=item.PlaylistId })
        </td>
    </tr>
}

</table>

@model Assignment8.Controllers.TrackWithDetails

@{
    ViewBag.Title = "Delete";
}

<h2>Delete track - @Model.Name</h2>

<h4 class="text-danger">Are you sure you want to delete this?</h4>
<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Composer)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Composer)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Genre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Genre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Clerk)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Clerk)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Albums)
            <span class="badge"> @Html.DisplayFor(model => model.AlbumsCount) </span>
        </dt>
        <dd>
            @foreach (var item in Model.Albums)
            {
                <span>@Html.ActionLink(item.Name, "Details", "Albums", new { id = item.Id }, null)</span>
            }
        </dd>

        <dt>
           <br/>
        </dt>

        <dd>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-default" />
                    @Html.ActionLink("Cancel", "Index", "Tracks", null, new { @class = "btn btn-default" })
                </div>
            }

        </dd>
    </dl>

   
</div>
